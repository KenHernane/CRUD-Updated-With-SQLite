<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/members" id="form" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control">
    </div>
    <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>
<form action="/api/members/remove" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Enter Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    
    <input type="submit" value="Delete Member" class="btn btn-primary btn-block"> 
</form>
<form action="/api/members/update" method="POST" class="mb-4">
    <div class="form-group">
        <label for="id">Enter ID</label>
        <input type="text" name="id" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Enter New Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="email">Enter New Email</label>
        <input type="text" name="email" class="form-control">
    </div>
    <div class="form-group">
        <label for="status">Enter New Status</label>
        <input type="text" name="status" class="form-control">
    </div>
    <input type="submit" value="Update Member" class="btn btn-primary btn-block"> 
</form>
<h4>Members</h4>
<ul class="list-group">
    {{#each members}}
        <li class="list-group-item">{{this.ID}} <br> {{this.name}} <br> {{this.email}} <br>{{this.status}}</li>
    {{/each}}
</ul>
